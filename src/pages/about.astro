---
import Layout from "../layouts/Layout.astro";
import i18next, { t, changeLanguage } from "i18next";

changeLanguage("es");
---

<Layout title="About Agrotech">
  <div class="container mx-auto m-10">
    <div class="flex flex-wrap items-center justify-center lg:px-24 mb-12">
      <div class="w-full p-4">
        <img
          src={i18next.language === "es"
            ? "/worldseafood/img/world_seafood_es.jpg"
            : "/worldseafood/img/world_seafood_en.jpg"}
          class="w-100"
          alt=""
        />
      </div>
      <div class="w-full p-4">
        <p class="text-4xl uppercase font-bold text-violet-700 mb-6">
          World Seafood Industry
        </p>
