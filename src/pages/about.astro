---
import Layout from "../layouts/Layout.astro";
import i18next, { t, changeLanguage } from "i18next";

changeLanguage("es");
---

<Layout title={t("tab-title.about")}>
  <div class="container mx-auto m-10">
    <div class="flex flex-wrap items-center justify-center lg:px-24 mb-12">
      <div class="w-full p-4">
        <img
          src={i18next.language === "es"
            ? "/img/world_seafood_es.jpg"
            : "/img/world_seafood_en.jpg"}
          class="w-100"
          alt=""
        />
      </div>
      <div class="w-full p-4">
        <p class="text-4xl uppercase font-bold text-violet-700 mb-6">
          World Seafood Industry
        </p>
        <p class="text-xl text-justify">
          {t("about.description1")} <br><br>
          {t("about.description2")} <br><br>
          {t("about.description3")} <br><br>
          {t("about.description4")} <br><br>
        </p>
      </div>
      <p class="lg:text-6xl text-4xl uppercase font-bold text-violet-700 mb-6 p-8 ">
        {t("about.invitation1")} <br> {t("about.invitation2")}
      </p>
    </div>
  </div>
</Layout>
