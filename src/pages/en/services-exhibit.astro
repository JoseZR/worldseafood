---
import Layout from "../../layouts/Layout.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("en");
---

<Layout title={t("tab-title.services-exhibit")}>
  <p
    class="text-4xl text-center uppercase font-bold text-violet-700 pt-14 pb-4"
  >
    {t("exhibitor-services.title")}
  </p>
  <div
    class="flex lg:flex-row flex-col items-center justify-center gap-4 lg:px-14 p-8"
  >
    <div class="w-full sm:w-1/4 order-2 lg:order-1 lg:h-[380px] h-auto flex flex-col justify-between">
